<base:CapsuleBase x:Class="MyToolBar.Plugin.BasicPackage.Capsules.WeatherCap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:base="clr-namespace:MyToolBar.Common.UIBases;assembly=MyToolBar.Common"
             mc:Ignorable="d" 
             Height="30">
    <Grid x:Name="WeatherViewer">
        <Border x:Name="AirLevel" Margin="0,0,2,2" Width="8" Height="8" Background="#FFA8A8A8" CornerRadius="8" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Border x:Name="Weather_Icon" HorizontalAlignment="Right" Width="20" Height="20" Margin="0,0,8,0" CornerRadius="20,20,20,20">
        </Border>
        <TextBlock x:Name="Weather_info" TextWrapping="Wrap" d:Text="24℃  Moderate Rain" Text="No Internet" VerticalAlignment="Center" Margin="5,0,33,0"/>
    </Grid>
</base:CapsuleBase>
