<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyToolBar.Views.Pages.Settings"
      xmlns:ws="https://schemas.elecho.dev/wpfsuite"
     x:Class="MyToolBar.Views.Pages.Settings.ServicesSettingsPage"
      mc:Ignorable="d"  Foreground="{DynamicResource ForeColor}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicesSettingsPage">

    <Grid>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" 
            Margin="20,20,0,0" Text="{DynamicResource SettingsWindow_Tab_Services}" FontSize="20" FontWeight="Bold"/>

        <ws:ScrollViewer Style="{StaticResource SimpleVerticalScrollViewerStyle}">
            <StackPanel x:Name="ServiceList" Margin="0 60 0 0"/>
        </ws:ScrollViewer>

    </Grid>
</Page>
