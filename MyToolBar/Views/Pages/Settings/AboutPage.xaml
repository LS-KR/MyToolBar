<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyToolBar.Views.Pages.Settings"
      xmlns:ws="https://schemas.elecho.dev/wpfsuite"
      xmlns:UIBases="clr-namespace:MyToolBar.Common.UIBases;assembly=MyToolBar.Common" x:Class="MyToolBar.Views.Pages.Settings.AboutPage"
      mc:Ignorable="d"  Foreground="{DynamicResource ForeColor}"
      d:DesignHeight="450" d:DesignWidth="800"
      d:Background="White"
      d:Foreground="Black"
      Title="AboutPage">

    <ws:ScrollViewer Margin="28 12 28 28" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Hidden"  ws:StylusTouchDevice.Simulate="True">
        <ws:StackPanel>
            <TextBlock Text="About"
                   FontSize="22"
                   Margin="0 0 0 12"/>
            <Grid x:Name="ContentGrid"/>
        </ws:StackPanel>
    </ws:ScrollViewer>
</Page>
