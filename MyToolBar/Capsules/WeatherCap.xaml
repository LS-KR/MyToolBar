<UserControl x:Class="MyToolBar.Capsules.WeatherCap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            Width="107" Height="25" Cursor="Hand" MouseLeftButtonUp="UserControl_MouseLeftButtonUp" TouchLeave="UserControl_TouchEnter"
             MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <Grid x:Name="WeatherViewer">
        <Border x:Name="ViewerMask" Opacity="0" Background="#22FFFFFF" CornerRadius="12"/>
        <Border x:Name="AirLevel" Margin="0,0,2,2" Width="8" Height="8" Background="#FFA8A8A8" CornerRadius="8" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Border x:Name="Weather_Icon" HorizontalAlignment="Right" Width="20" Height="20" Margin="0,0,8,0" CornerRadius="20,20,20,20">
        </Border>
        <TextBlock x:Name="Weather_info" HorizontalAlignment="Left" TextWrapping="Wrap" Text="No Internet" VerticalAlignment="Center" Margin="8,0,0,0"/>
    </Grid>
</UserControl>
